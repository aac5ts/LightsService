<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN"
        android:id="@+id/greenButton"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editIPAddress"
        android:layout_centerHorizontal="true"
        android:onClick="sendGreen"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        android:id="@+id/blueButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/greenButton"
        android:layout_alignStart="@+id/greenButton"
        android:onClick="sendBlue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:id="@+id/redButton"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/blueButton"
        android:layout_alignLeft="@+id/blueButton"
        android:layout_alignStart="@+id/blueButton"
        android:onClick="sendRed" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editIPAddress"
        android:editable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter IP Address" />

</RelativeLayout>
